<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
    No ratings.
  <% else %>
    <%= "#{@beer.ratings.size} #{'rating'.pluralize @beer.ratings.size}" %>,
    average <%= round_average @beer.average_rating %>
  <% end %>
</p>

<%= link_to 'Edit', edit_beer_path(@beer) %>
